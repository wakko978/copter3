<h1 class="pagetitle">Miscellaneous items</h1>

<table class="non-fixed">
	<%= will_paginate @others %>
	<caption><%= link_to 'Add Miscellaneous item', new_admin_other_path %></caption>
	<thead>
		<th class="top" scope="col"><%= sort_link 'Name', :name %></th>
		<th class="top" scope="col">Options</th>
	</thead>
	
	<% @others.each do |other| %>
		<tr>
			<th scope="row">
				<%= link_to other.name, other_path(other) %>
			</th>
			<td>
				<%= link_to '[Edit]', edit_admin_other_path(other) %>
        <%= link_to '[Destroy]', admin_other_path(other), :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>