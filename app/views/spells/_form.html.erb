<%= form_for @spell, :url => profile_spells_path(@profile) do |f| %>
  <% if @spell.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spell.errors.count, "error") %> prohibited this magic from being saved:</h2>

      <ul>
      <% @spell.errors.full_messages.each do |msg| %>
